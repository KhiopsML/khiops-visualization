/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": "..",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "module": "es2022",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noUncheckedIndexedAccess": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noPropertyAccessFromIndexSignature": false,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noImplicitOverride": true,
    "noFallthroughCasesInSwitch": true,
    "target": "ES2022",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2022", "dom"],
    "types": ["jasmine", "node"],
    "paths": {
      "@khiops-library/*": ["./src/app/khiops-library/*"],
      "@khiops-treeview/*": ["./libs/khiops-treeview/*"],
      "@khiops-hypertree/*": ["./libs/khiops-hypertree/dist/*"],
      "@khiops-visualization/*": ["./src/app/khiops-visualization/*"],
      "@khiops-covisualization/*": ["./src/app/khiops-covisualization/*"],
      "khiops-visualization-components": [
        "./dist/khiops-visualization-components/khiops-visualization-components",
        "./dist/khiops-visualization-components"
      ],
      "stream": ["./node_modules/stream-browserify"]
    }
  },
  "exclude": ["node_modules", "./libs", "dist", "**/*.spec.ts"],
  "angularCompilerOptions": {
    "strictTemplates": false,
    "strictInjectionParameters": true
  }
}
