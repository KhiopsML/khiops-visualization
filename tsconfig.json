/* To learn more about this file see: https://angular.io/config/tsconfig. */
{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "emitDecoratorMetadata": true,
    "downlevelIteration": true,
    "importHelpers": true,
    "module": "es2020",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "target": "es2019",
    "allowJs": true,
    "typeRoots": ["node_modules/@types"],
    "lib": ["es2019", "es2017", "es2016", "es2015", "dom"],
    "paths": {
      "@khiops-library/*": ["./src/app/khiops-library/*"],
      "@khiops-hypertree/*": ["./libs/khiops-hypertree/dist/*"],
      "@khiops-visualization/*": ["./src/app/khiops-visualization/*"],
      "@khiops-covisualization/*": ["./src/app/khiops-covisualization/*"],
      "khiops-visualization-components": [
        "dist/khiops-visualization-components/khiops-visualization-components",
        "dist/khiops-visualization-components"
      ],
      "stream": ["./node_modules/stream-browserify"]
    }
  },
  "exclude": ["node_modules", "./libs"],
  "angularCompilerOptions": {
    "enableIvy": true,
    "strictTemplates": false,
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
